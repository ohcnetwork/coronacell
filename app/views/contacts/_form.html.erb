
<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :gender %>
    <%= f.input :age %>
    <%= f.input :house_name %>
    <%= f.input :ward %>
    <%= f.input :landmark %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
